<% content_tag_for( :tr, photo, :class => 'row' ) do %>
<td class='thumb'>
<%= image_tag(photo.image.url(:small)) %>
</td>
<td class='title'>
<%= link_to photo.title, photo %>
</td>
<td class='manage'>
<%= button_link_to 'Edit', edit_photo_path(photo) %>&nbsp;
<%= destroy_link_to 'Destroy', photo_path(photo) %>
</td>
<% end %><!-- class='photo row' -->
